// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build C++ file",
        "type": "shell",
        "command": "g++",
        "args": [
          "-std=c++17",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Generated task for building C++ files"
      }
    ]
  }
  